<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/plant_ask_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#24C79F"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/ll_goods_scan"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="#24C79F"
                android:gravity="center_vertical|center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/pldetails_return" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_goods_message"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#24C79F"
                android:gravity="center_vertical|center"
                android:orientation="vertical"
                android:paddingLeft="7dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/shop_message" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center|center_vertical"
                    android:text="消息"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <com.gcssloop.widget.RCRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/ll_goods_message"
                android:layout_toRightOf="@id/ll_goods_scan"
                android:background="@android:color/transparent"
                app:round_corner="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/plantscience_search"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:src="@mipmap/plantscience_search" />

                    <com.xw.repo.XEditText
                        android:id="@+id/xet_goods_search"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="输入商品名"
                        android:lines="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="8dp"
                        android:singleLine="true"
                        android:textColor="#C8C8C8"
                        android:textColorHint="#C8C8C8"
                        android:textCursorDrawable="@drawable/nickname_cursor"
                        android:textSize="14sp" />

                </LinearLayout>

            </com.gcssloop.widget.RCRelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#24C79F"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_comprehensive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingTop="8dp"
                android:text="综合排序"
                android:textColor="#99ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_goods_sales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="销售"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#24C79F">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="价格"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_goods_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_goods_price"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/tv_goods_price"
                    android:gravity="left"
                    android:paddingBottom="1dp"
                    android:text="▲"
                    android:textColor="#ffffff"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_goods_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_goods_price"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/tv_goods_price"
                    android:gravity="left"
                    android:paddingTop="1dp"
                    android:text="▼"
                    android:textColor="#ffffff"
                    android:textSize="8sp" />


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/ll_goods_there"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/plant_ask_background"
                android:gravity="center_vertical|center"
                android:orientation="vertical">

                <ImageView
                    android:src="@mipmap/allorder_no"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|clip_vertical"
                    android:text="商城暂无商品~"
                    android:layout_marginTop="15dp"
                    android:textColor="#474747"
                    android:textSize="16sp" />

            </LinearLayout>

            <com.jingchen.pulltorefresh.PullToRefreshLayout
                android:id="@+id/ptrl_goods_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/white">

                <com.jingchen.pulltorefresh.PullableGridView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:divider="@null"
                    android:horizontalSpacing="10dp"
                    android:numColumns="2"
                    android:padding="10dp"
                    android:scrollbars="none"
                    android:verticalSpacing="10dp" />

            </com.jingchen.pulltorefresh.PullToRefreshLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
