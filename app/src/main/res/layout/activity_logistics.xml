<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/plant_ask_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rl_logistics_return"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/plantscience_return" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="查看物流"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/plant_ask_background"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp">

                    <com.gcssloop.widget.RCRelativeLayout
                        android:id="@+id/rcrl_logistics_picture"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@android:color/transparent"
                        app:round_corner="4dp">

                        <ImageView
                            android:id="@+id/iv_logistics_picture"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/test4" />

                    </com.gcssloop.widget.RCRelativeLayout>

                    <TextView
                        android:id="@+id/tv_logistics_deliverystatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/rcrl_logistics_picture"
                        android:layout_toRightOf="@id/rcrl_logistics_picture"
                        android:lines="1"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="运输中"
                        android:textColor="@color/strategy_item_published"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_logistics_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/rcrl_logistics_picture"
                        android:layout_toRightOf="@id/rcrl_logistics_picture"
                        android:lines="1"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="官方电话：暂无"
                        android:textColor="#9A9CA5"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_logistics_courier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/tv_logistics_phone"
                        android:layout_toRightOf="@id/rcrl_logistics_picture"
                        android:lines="1"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="圆通快递：888888888888888888888"
                        android:textColor="#9A9CA5"
                        android:textSize="14sp" />

                </RelativeLayout>

                <com.cdqf.plant_view.ListViewForScrollView
                    android:id="@+id/lv_logistics_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:divider="@null"
                    android:padding="10dp"
                    android:scrollbars="none" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
