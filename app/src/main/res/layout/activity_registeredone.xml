<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_registeredone_return"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:background="@drawable/component_click"
                android:clickable="true"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/plantscience_return" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_registeredone_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/component_click"
                android:clickable="true"
                android:gravity="center_vertical|center"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:text="登录"
                android:textColor="#474747"
                android:textSize="18sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerInside"
            android:src="@mipmap/registered_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:text="手机号："
                android:textColor="#474747"
                android:textSize="14sp" />

            <com.xw.repo.XEditText
                android:id="@+id/xet_registeredone_phone"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:gravity="center_vertical|left"
                android:hint="请输入手机号"
                android:lines="1"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textColor="#474747"
                android:textColorHint="#CAC9CA"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_registeredone_obtain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/strategy_item_published"
                android:gravity="center_vertical|center"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/plant_ask_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30dp"

            android:paddingRight="30dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:text="验证码："
                android:textColor="#474747"
                android:textSize="14sp" />

            <com.xw.repo.XEditText
                android:id="@+id/xet_registeredone_code"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:gravity="center_vertical|left"
                android:hint="请输入验证码"
                android:lines="1"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textColor="#474747"
                android:textColorHint="#CAC9CA"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/plant_ask_background" />

        <TextView
            android:id="@+id/tv_registeredone_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/strategy_item_published"
            android:gravity="center_vertical|center"
            android:padding="10dp"
            android:text="下一步"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
