<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plant_ask_background">

    <it.sephiroth.android.library.widget.HListView
        android:id="@+id/hlv_for_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <com.gcssloop.widget.RCRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:round_corner="20dp">

        <TextView
            android:id="@+id/tv_for_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:hint="请输入您要搜索的地点"
            android:lines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:textColor="#B0B2B9"
            android:textColorHint="#B0B2B9"
            android:textSize="16sp" />

    </com.gcssloop.widget.RCRelativeLayout>

    <com.gcssloop.widget.RCRelativeLayout
        android:id="@+id/rcrl_for_planning"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        app:round_corner="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#24C7A5"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="线路规划"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </com.gcssloop.widget.RCRelativeLayout>

    <ImageView
        android:id="@+id/iv_for_post"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/for_post" />

</RelativeLayout>
