<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="13dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:lines="1"
                android:text="枫叶秀"
                android:textColor="#797979"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_address_item_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="right"
                android:lines="1"
                android:text="13551021178"
                android:textColor="#797979"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_address_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:lineSpacingExtra="4dp"
            android:gravity="left"
            android:text="四川省成都市青羊区狮马路98号 太升大厦（成都启锋科技有限公司）"
            android:textColor="#797979"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_address_item_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认地址"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/strategy_item_published"
                android:textSize="14sp"
                android:background="@null"
                android:button="@drawable/checkbox_style"
                android:checked="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right|center_vertical"
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_address_item_edit"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/address_edit"
                        android:layout_width="20dp"
                        android:background="@color/white"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="left"
                        android:lines="1"
                        android:layout_marginLeft="3dp"
                        android:text="编辑"
                        android:textColor="#797979"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_address_item_delete"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/address_delete"
                        android:layout_width="20dp"
                        android:background="@color/white"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="left"
                        android:lines="1"
                        android:layout_marginLeft="3dp"
                        android:text="删除"
                        android:textColor="#797979"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
