<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_logistics_item_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:background="@color/white"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_logistics_item_which"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="昨天"
                android:textColor="#9A9CA5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_logistics_item_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:text="11:23"
                android:textColor="#9A9CA5"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_logistics_item_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@id/ll_logistics_item_one"
            android:orientation="vertical">

            <TextView
                android:layout_width="1dp"
                android:background="#E7EAF3"
                android:layout_height="10dp" />

            <com.gcssloop.widget.RCRelativeLayout
                android:layout_width="20dp"
                app:round_as_circle="true"
                android:background="@android:color/transparent"
                android:layout_height="20dp">

                <TextView
                    android:text="∧"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="#9A9CA5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.gcssloop.widget.RCRelativeLayout>

            <TextView
                android:layout_width="1dp"
                android:background="#E7EAF3"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@id/ll_logistics_item_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:background="@color/white"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_logistics_item_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="  运输中"
                android:textColor="#9A9CA5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_logistics_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="2dp"
                android:background="@color/white"
                android:text="【南宁市】 包裹已从【南宁市转运中心】 发出"
                android:textColor="#9A9CA5"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
