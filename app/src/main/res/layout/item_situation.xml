<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plant_ask_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white">

            <ImageView
                android:id="@+id/iv_situation_item_picture"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_situation_item_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_situation_item_picture"
                android:lineSpacingExtra="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="8dp"
                android:paddingTop="6dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_situation_item_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_situation_item_picture"
                android:lines="1"
                android:paddingLeft="15dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:layout_alignParentBottom="true"
                android:textColor="#A3A3A3"
                android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>
